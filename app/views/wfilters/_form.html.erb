<%= form_for @wfilter, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pore_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pore_size, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :num_filters, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :num_filters, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :note, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :note, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                wfilters_path, :class => 'btn' %>
  </div>
<% end %>
