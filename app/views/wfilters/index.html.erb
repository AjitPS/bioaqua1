<%- model_class = Wfilter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:pore_size) %></th>
      <th><%= model_class.human_attribute_name(:num_filters) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @wfilters.each do |wfilter| %>
      <tr>
        <td><%= link_to wfilter.id, wfilter_path(wfilter) %></td>
        <td><%= wfilter.name %></td>
        <td><%= wfilter.pore_size %></td>
        <td><%= wfilter.num_filters %></td>
        <td><%= wfilter.note %></td>
        <td><%=l wfilter.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_wfilter_path(wfilter), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      wfilter_path(wfilter),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_wfilter_path,
            :class => 'btn btn-primary' %>
